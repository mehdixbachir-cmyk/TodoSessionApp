@model TodoSessionApp.Models.Todo

<h2>Ajouter une tâche</h2>

<form method="post">
    <label>Libelle</label><br />
    <input type="text" name="Libelle" required /><br /><br />

    <label>Description</label><br />
    <textarea name="Description"></textarea><br /><br />

    <label>État</label><br />
    <select name="State">
        <option>ToDo</option>
        <option>Doing</option>
        <option>Done</option>
    </select><br /><br />

    <label>Date</label><br />
    <input type="date" name="Date" required /><br /><br />

    <button type="submit">Ajouter</button>
</form>

<a href="/Todo/Index">⬅ Retour</a>
